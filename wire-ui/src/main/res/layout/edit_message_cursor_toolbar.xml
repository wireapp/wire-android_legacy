<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/wire__padding__regular"
             android:layout_marginRight="@dimen/wire__padding__regular">

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__edit_message__reset"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:padding="@dimen/drawing__button__padding"
        android:gravity="center"
        android:text="@string/glyph__undo"
        android:textColor="@color/light_graphite"
        android:textSize="@dimen/wire__text_size__regular"
        style="?attr/iconButton"
        />

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__edit_message__approve"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/drawing__button__padding"
        android:gravity="center"
        android:text="@string/glyph__check"
        android:textColor="@color/light_graphite"
        android:textSize="@dimen/wire__text_size__medium"
        style="?attr/iconButton"
        />

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__edit_message__close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:padding="@dimen/drawing__button__padding"
        android:gravity="center"
        android:text="@string/glyph__close"
        android:textColor="@color/graphite"
        android:textSize="@dimen/wire__text_size__regular"
        style="?attr/iconButton"
        />

</FrameLayout>
