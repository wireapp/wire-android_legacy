<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.waz.zclient.ui.text.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Info"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/wire__padding__16"
                android:paddingEnd="@dimen/wire__padding__16"
                android:textColor="@color/accent_blue"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Joao Ponte"
                app:subtitle="Name"
                />

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="joaoponte"
                app:subtitle="Username"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="joao.ponte@wire.com"
                app:subtitle="Email"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="+351 961234567"
                app:subtitle="Email"/>

            <com.waz.zclient.ui.text.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Appearance"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/wire__padding__16"
                android:paddingEnd="@dimen/wire__padding__16"
                android:textColor="@color/accent_blue"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Picture"
                app:iconStart="@drawable/conversation_badge_red"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Color"
                app:iconStart="@drawable/conversation_badge_red"/>

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/typefaceTextView"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/wire__padding__16"
                android:paddingStart="@dimen/wire__padding__16"
                android:text="Settings"
                android:textColor="@color/accent_blue"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Reset Password"
                />

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Log out"
                />

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Delete account"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
