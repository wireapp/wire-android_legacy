<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsAboutAboutWebsiteButton"
            style="@style/Button.Settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_website_title"
            app:layout_constraintBottom_toTopOf="@+id/settingsAboutTermsAndConditionsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsAboutTermsAndConditionsButton"
            style="@style/Button.Settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_tos_title"
            app:layout_constraintBottom_toTopOf="@+id/settingsAboutPrivacyButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsAboutAboutWebsiteButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsAboutPrivacyButton"
            style="@style/Button.Settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_privacy_policy_title"
            app:layout_constraintBottom_toTopOf="@+id/settingsAboutThirdPartyLicensesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsAboutTermsAndConditionsButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsAboutThirdPartyLicensesButton"
            style="@style/Button.Settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_licenses_title"
            app:layout_constraintBottom_toTopOf="@+id/settingsAboutAppVersionDetailsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsAboutPrivacyButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsAboutAppVersionDetailsButton"
            style="@style/Button.Settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_version_title"
            app:layout_constraintBottom_toTopOf="@+id/settingsAboutCopyrightTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsAboutThirdPartyLicensesButton" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/settingsAboutCopyrightTextView"
            style="@style/Button.Settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_copyright_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsAboutAppVersionDetailsButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
