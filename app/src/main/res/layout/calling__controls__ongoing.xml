<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
    >
    <!-- Mute Button -->
    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/ccbv__button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        app:labelFont="@string/wire__typeface__light"
        app:labelTextSize="@dimen/wire__text_size__small"
        />

    <!-- Dummy view to make buttons align to edges -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <!-- Dismiss Button -->
    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/ccbv__button_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        app:labelFont="@string/wire__typeface__light"
        app:labelTextSize="@dimen/wire__text_size__small"
        />

    <!-- Dummy view to make buttons align to edges -->
    <View
        android:id="@+id/v__right_view_spacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        />

    <!-- Speaker or Video Button -->
    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/ccbv__button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:visibility="gone"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        app:labelFont="@string/wire__typeface__light"
        app:labelTextSize="@dimen/wire__text_size__small"
        />
</merge>

