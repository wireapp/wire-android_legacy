<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/wire__text_size__smaller"
        android:textColor="?wirePrimaryTextColor"
        android:textAllCaps="true"
        app:w_font="@string/wire__typeface__bold"
        android:maxLines="1"
        android:drawablePadding="@dimen/wire__padding__4"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/wire__padding__8"
        android:layout_marginBottom="@dimen/wire__padding__8"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/restriction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wire__padding__8"
        android:textSize="@dimen/wire__text_size__small"
        android:textColor="?wireSecondaryTextColor"
        app:w_font="@string/wire__typeface__light"
        android:ellipsize="end"
        android:visibility="gone"
        />

</LinearLayout>
