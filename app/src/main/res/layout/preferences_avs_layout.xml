<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/avs__logging"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Logging"
                />

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/avs__post_session_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Post session ID"
                />

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/avs__last_session_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:title="Last session ID"
                />

        </LinearLayout>

    </ScrollView>

</merge>
