<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?wireBackgroundCollection">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_default_toolbar_toolbar"
        style="?wireBackground"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_action_close_dark">

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/fragment_default_toolbar_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity='center'
            android:text="@string/new_group_header"
            android:textColor="?wirePrimaryTextColor"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__medium" />

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/fragment_default_toolbar_textview_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity='end'
            android:layout_marginEnd="@dimen/wire__padding__regular"
            android:text="@string/next_button"
            android:textColor="@drawable/app_entry_text_button"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__medium" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_default_toolbar_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_default_toolbar_toolbar" />

</android.support.constraint.ConstraintLayout>
