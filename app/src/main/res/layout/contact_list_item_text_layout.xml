<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/people_picker__search_result__row__padding_bottom">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__contactlist__user__name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start|bottom"
        android:maxLines="1"
        app:font="@string/wire__typeface__light"
        style="?startUiUserRowLabel"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__contactlist__user__username_and_address_book"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start|top"
        android:maxLines="1"
        app:font="@string/wire__typeface__light"
        android:textSize="@dimen/wire__text_size__small"
        style="?startUiUserRowSubLabel"
        />

</LinearLayout>
