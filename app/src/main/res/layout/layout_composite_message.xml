<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:id="@+id/composite_message_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/composite_message_text_layout_margin_bottom"
        android:orientation="vertical" />

    <com.waz.zclient.messages.parts.composite.ButtonContainerView
        android:id="@+id/composite_message_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content__padding_left"
        android:layout_marginEnd="@dimen/content__padding_right" />
</merge>
