<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/top_background_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_graphite_8">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/pickuser_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:clickable="false"
            app:contentInsetStart="0dp"
            android:visibility="gone">

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/pickuser_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/wire__padding__regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                />

        </androidx.appcompat.widget.Toolbar>

        <com.waz.zclient.usersearch.views.SearchEditText
            android:id="@+id/sbv__search_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collections__multi_share_search_height"
            android:layout_margin="@dimen/wire__padding__8"
            app:hintText="@string/pick_user_search_hint"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/pick_user_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wire__padding__regular"
            android:layout_marginEnd="@dimen/wire__padding__regular"
            app:tabIndicatorColor="@color/white_72"
            app:tabTextColor="@color/white_32"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorHeight="@dimen/wire__divider__height"
            >

            <com.google.android.material.tabs.TabItem
                android:text="@string/people_picker__search_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/tab_layout"/>

            <com.google.android.material.tabs.TabItem
                android:text="@string/people_picker__search_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/tab_layout"/>

        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/empty_list_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/conversation_list__row__height"
        android:background="@drawable/selector__transparent_button"
        android:clickable="true"
        android:focusable="true">

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/icon"
            android:layout_width="@dimen/search__chathead__size"
            android:layout_height="@dimen/search__chathead__size"
            android:padding="@dimen/wire__padding__4"
            android:layout_marginStart="@dimen/wire__padding__regular"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/glyph__envelope"
            android:textColor="@color/white"
            android:textSize="@dimen/wire__text_size__regular"/>

        <com.waz.zclient.ui.text.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/icon"
            android:paddingEnd="@dimen/wire__padding__regular"
            android:paddingStart="@dimen/wire__padding__regular"
            android:text="@string/pick_user_teams_invite"
            android:textSize="@dimen/wire__text_size__regular"
            android:textColor="@color/white"
            app:w_font="@string/wire__typeface__regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wire__divider__height__thin"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginStart="@dimen/wire__padding__regular"
            android:background="@color/light_graphite_40"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv__pickuser__header_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/empty_services_icon"
                android:layout_width="@dimen/services_warning_icon_width"
                android:layout_height="@dimen/services_warning_icon_height"
                android:layout_marginBottom="@dimen/wire__padding__16"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:contentDescription="@string/empty_services_content_description" />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/pickuser__error_text"
                android:layout_width="@dimen/services_warning_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:w_font="@string/wire__typeface__medium"
                android:textColor="@color/white"
                android:textSize="@dimen/wire__text_size__small"
                android:gravity="center"
                />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/empty_services_button"
                android:paddingStart="@dimen/wire__padding__16"
                android:paddingEnd="@dimen/wire__padding__16"
                android:paddingTop="@dimen/wire__padding__4"
                android:paddingBottom="@dimen/wire__padding__4"
                android:layout_marginTop="@dimen/wire__padding__16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:w_font="@string/wire__typeface__medium"
                android:text="@string/add_services_button_text"
                android:textColor="@color/white"
                android:textSize="@dimen/wire__text_size__regular_small"
                android:gravity="center"
                android:background="@drawable/invite_button_background"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/empty_search_icon"
                android:layout_width="@dimen/empty_search_icon_width"
                android:layout_height="@dimen/empty_search_icon_height"
                android:layout_marginBottom="@dimen/wire__padding__16"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_icon_empty_search"
                android:visibility="gone"
                android:contentDescription="@string/empty_search_content_description" />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/empty_search_text1"
                android:layout_width="@dimen/empty_search_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:w_font="@string/wire__typeface__medium"
                android:textColor="@color/white"
                android:textSize="@dimen/wire__text_size__small"
                android:gravity="center"
                android:text="@string/empty_search_text1"
                android:visibility="gone"
                />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/empty_search_text2"
                android:layout_width="@dimen/empty_search_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:w_font="@string/wire__typeface__medium"
                android:textColor="@color/white"
                android:textSize="@dimen/wire__text_size__small"
                android:gravity="center"
                android:text="@string/empty_search_text2"
                android:visibility="gone"
                />

            <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/empty_search_button"
                android:paddingStart="@dimen/wire__padding__16"
                android:paddingEnd="@dimen/wire__padding__16"
                android:paddingTop="@dimen/wire__padding__4"
                android:paddingBottom="@dimen/wire__padding__4"
                android:layout_marginTop="@dimen/wire__padding__16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:w_font="@string/wire__typeface__medium"
                android:text="@string/empty_search_button_text"
                android:textColor="@color/white"
                android:textSize="@dimen/wire__text_size__regular_small"
                android:gravity="center"
                android:background="@drawable/invite_button_background"
                android:visibility="gone"
                />
        </LinearLayout>

    </FrameLayout>

    <com.waz.zclient.common.views.FlatWireButton
        android:id="@+id/invite_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flat_wire_button_height"
        />


</LinearLayout>
