<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/wire__padding__16"
    tools:background="@color/white">

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/item_folder_selection_textview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:layout_marginLeft="4dp"
        android:text="@string/glyph__check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/item_folder_selection_textview_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/item_folder_selection_textview_icon"
        tools:text="Marketing" />

</android.support.constraint.ConstraintLayout>
