<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_account"
                app:title="Account"/>

            <com.waz.zclient.pages.main.profile.preferences.views.DevicesSettingsButton
                android:id="@+id/settings_devices"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_devices"
                app:title="@string/pref_devices_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_options"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_options"
                app:title="Options"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_advanced"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_advanced"
                app:title="Advanced"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_support"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_support"
                app:title="Support"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_about"
                app:title="About"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_dev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_dev"
                app:title="Developer Settings"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_avs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@drawable/ic_action_play_light"
                app:title="AVS Settings"/>

        </LinearLayout>

    </ScrollView>

    <com.waz.zclient.pages.main.profile.preferences.views.TextButton
        android:id="@+id/profile_invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preference_button_height"
        android:background="@color/accent_blue"
        app:title="@string/pref_invite_title"
        app:iconStart="@drawable/ic_action_about"
        />

</merge>
