<resources>
    <declare-styleable name="ConfirmationMenu">
        <attr name="header" format="string" />
        <attr name="text" format="string" />
        <attr name="negative" format="string" />
        <attr name="positive" format="string" />
        <attr name="cancelVisible" format="boolean" />
        <attr name="checkboxLabel" format="string" />
        <attr name="checkboxIsSelected" format="boolean" />
        <attr name="headerIcon" format="reference" />
        <attr name="backgroundImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="PickUserEditText">
        <attr name="hintSmallScreen" format="string" />
        <attr name="hintTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FooterMenu">
        <attr name="leftActionText" format="string" />
        <attr name="rightActionText" format="string" />
        <attr name="leftActionLabelText" format="string" />
        <attr name="rightActionLabelText" format="string" />
    </declare-styleable>


    <declare-styleable name="ChatHeadView">
        <attr name="glyph_size" format="dimension" />
        <attr name="initials_font_size" format="dimension" />
        <attr name="isSelectable" format="boolean" />
        <attr name="swap_background_and_initial_colors" format="boolean" />
        <attr name="allow_icon" format="boolean" />
        <attr name="show_border" format="boolean" />
        <attr name="default_background" format="color" />
        <attr name="is_round" format="boolean" />
        <attr name="show_waiting" format="boolean" />
        <attr name="gray_on_unconnected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopUserChathead">
        <attr name="chathead_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SendingAnimationView">
        <attr name="backgroundColor" format="color" />
        <attr name="circlePadding" format="dimension" />
        <attr name="circleRadius" />
        <attr name="backgroundCircleRadius" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="fullCircleColor" format="color" />
        <attr name="pendingStop" format="integer" />
        <attr name="pendingDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ThemedTextView">
        <attr name="themedColor" format="enum">
            <enum name="None" value="0" />
            <enum name="Primary" value="1" />
            <enum name="Secondary" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TypefaceTextView">
        <attr name="w_font" format="string" />
        <attr name="transform" format="string" />
    </declare-styleable>

    <declare-styleable name="ShieldView">
        <attr name="shieldVerified" format="boolean" />
    </declare-styleable>

    <declare-styleable name="OtrSwitch">
        <attr name="otrTheme" format="string" />
    </declare-styleable>

    <declare-styleable name="CallControlButtonView">
        <attr name="iconDimension" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BoundLayout">
        <attr name="maximumWidth" format="dimension" />
        <attr name="maximumHeight" format="dimension" />
        <attr name="minimumWidth" format="dimension" />
        <attr name="minimumHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AssetActionButton">
        <attr name="isFileType" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SearchEditText">
        <attr name="hintText" format="string" />
    </declare-styleable>

    <declare-styleable name="TextButton">
        <attr name="title" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="iconStart" format="reference" />
        <attr name="iconEnd" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwitchPreference">
        <attr name="key" format="string"/>
    </declare-styleable>

    <declare-styleable name="InputBox">
        <attr name="hint" format="string" />
        <attr name="hasButton" format="boolean" />
    </declare-styleable>

    <attr name="wireDividerColor" format="color" />
    <attr name="wireDividerColorSolid" format="color" />

    <declare-styleable name="MenuRowButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonIcon" format="string" />
        <attr name="buttonTextColor" format="color" />
        <attr name="rowDividerVisible" format="boolean" />
        <attr name="buttonTextFont" format="string" />
    </declare-styleable>

    <declare-styleable name="ZetaButton">
        <attr name="isFilled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="StyleKitView">
        <attr name="drawableColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CallParticipantsView">
        <attr name="isScrollable" default="true" format="boolean" />
    </declare-styleable>
</resources>
