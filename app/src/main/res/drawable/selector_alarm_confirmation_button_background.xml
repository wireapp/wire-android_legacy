<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_confirmed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_red" />
            <corners android:radius="@dimen/rounded_button_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" app:state_confirmed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/accent_red" />
            <corners android:radius="@dimen/rounded_button_radius" />
        </shape>
    </item>

    <item android:state_pressed="true" app:state_confirmed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_4" />
            <stroke android:width="1dp" android:color="@color/accent_red" />
            <corners android:radius="@dimen/rounded_button_radius" />
        </shape>
    </item>
</selector>
