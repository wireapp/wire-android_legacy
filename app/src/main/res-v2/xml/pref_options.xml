<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreferenceCompat
        android:key="@string/pref_key_share_contacts"
        android:title="@string/pref_options_contacts_title"
        android:summary="@string/pref_options_contacts_summary"
        app:iconSpaceReserved="false" />
    <PreferenceCategory
        android:title="@string/pref_options_calls_category_title"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:key="@string/pref_key_variable_bitrate"
            app:title="@string/pref_options_vbr_title"
            app:summary="@string/pref_options_vbr_summary"
            app:iconSpaceReserved="false"
            app:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_options_alerts_category_title"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:key="@string/pref_key_vibrate"
            app:title="@string/pref_options_vibration_title"
            app:summary=""
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_options_sounds_title"
        app:iconSpaceReserved="false">
        <Preference
            android:key=""
            android:title="@string/pref_options_ringtones_ringtone_title"
            app:iconSpaceReserved="false" />
        <Preference
            android:key=""
            android:title="@string/pref_options_ringtones_text_title"
            app:iconSpaceReserved="false" />
        <Preference
            android:key=""
            android:title="@string/pref_options_ringtones_ping_title"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_options_requested_category_title"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:key="@string/pref_key_dark_theme"
            app:title="@string/pref_options_dark_theme_title"
            app:summary=""
            app:iconSpaceReserved="false" />
        <SwitchPreferenceCompat
            android:key="@string/pref_key_send_button"
            app:title="@string/pref_options_cursor_send_button_title"
            app:summary="@string/pref_options_cursor_send_button_summary"
            app:iconSpaceReserved="false"
            app:defaultValue="true" />
        <SwitchPreferenceCompat
            android:key="@string/pref_key_app_lock"
            app:title="@string/pref_options_app_lock_title"
            app:summary="@string/pref_options_app_lock_summary"
            app:iconSpaceReserved="false" />
        <SwitchPreferenceCompat
            android:key="@string/pref_key_incognito_keyboard"
            app:title="@string/pref_options_incognito_keyboard"
            app:summary="@string/pref_options_incognito_keyboard_summary"
            app:iconSpaceReserved="false" />
        <SwitchPreferenceCompat
            android:key="@string/pref_key_hide_screen_content"
            app:title="@string/pref_options_hide_screen_title"
            app:summary="@string/pref_options_hide_screen_summary"
            app:iconSpaceReserved="false" />
        <SwitchPreferenceCompat
            android:key="@string/pref_key_message_previews"
            app:title="@string/pref_options_message_previews"
            app:summary="@string/pref_options_message_previews_summary"
            app:iconSpaceReserved="false"
            app:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_options_media_category_title"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:key="@string/pref_key_download_images"
            android:title="@string/pref_options_image_download_title"
            app:iconSpaceReserved="false"
            app:defaultValue="true" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>

