<resources>
    <style name="settingsButton" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/preference_button_height</item>
        <item name="android:textSize">@dimen/wire__text_size__regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/preference_button_padding</item>
        <item name="android:paddingEnd">@dimen/preference_button_padding</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="settingsHeaderTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:paddingStart">@dimen/wire__padding__16</item>
        <item name="android:paddingEnd">@dimen/wire__padding__16</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="settingsTitleTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/wire__text_size__regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/preference_button_padding</item>
        <item name="android:paddingEnd">@dimen/preference_button_padding</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="settingsSubtitleTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/wire__text_size__small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/light_graphite</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="settingsGlyphsTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/wire__padding__16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/preference_button_padding</item>
        <item name="android:fontFamily">@font/wire_glyphs</item>
    </style>
</resources>
