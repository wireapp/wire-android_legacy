<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preferences_about_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_website_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/preferences_about_terms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsTitleTextView"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preferences_about_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_tos_title"
        app:layout_constraintTop_toBottomOf="@+id/preferences_about_website"
        app:layout_constraintBottom_toTopOf="@+id/preferences_about_privacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsTitleTextView"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preferences_about_privacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_privacy_policy_title"
        app:layout_constraintTop_toBottomOf="@+id/preferences_about_terms"
        app:layout_constraintBottom_toTopOf="@+id/preferences_about_license"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsTitleTextView"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preferences_about_license"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_licenses_title"
        app:layout_constraintTop_toBottomOf="@+id/preferences_about_privacy"
        app:layout_constraintBottom_toTopOf="@+id/preferences_about_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsTitleTextView"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preferences_about_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_version_title"
        app:layout_constraintTop_toBottomOf="@+id/preferences_about_license"
        app:layout_constraintBottom_toTopOf="@+id/preferences_about_copyright"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsTitleTextView"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preferences_about_copyright"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_about_copyright_title"
        app:layout_constraintTop_toBottomOf="@+id/preferences_about_version"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settingsTitleTextView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
