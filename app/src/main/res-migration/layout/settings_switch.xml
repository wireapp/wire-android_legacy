<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/settings_switch_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/preference_button_padding"
        android:layout_marginEnd="@dimen/preference_button_padding"
        android:layout_marginBottom="@dimen/preference_button_padding"
        android:ellipsize="end"
        android:text="@string/pref_devices_device_verified"
        android:textColor="@color/white"
        android:textSize="@dimen/wire__text_size__regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:w_font="@string/wire__typeface__light" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/settings_switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/preference_button_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>
