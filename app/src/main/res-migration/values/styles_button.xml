<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="@style/Widget.AppCompat.Button"/>

    <style name="Button.RobotoThin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Button.RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Button.RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Button.RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Button.RobotoBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Settings" parent="@style/Button.RobotoLight">
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/wire__text_size__regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/preference_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/preference_button_padding</item>
        <item name="android:paddingEnd">@dimen/preference_button_padding</item>
    </style>

    <style name="Button.Authentication"  parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:layout_marginEnd">@dimen/authentication_confirmation_button_margin_end</item>
        <item name="android:layout_marginTop">@dimen/authentication_confirmation_button_margin_top</item>
        <item name="android:background">@drawable/selector_confirm_button</item>
        <item name="android:padding">@dimen/authentication_confirmation_button_padding</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>
</resources>
