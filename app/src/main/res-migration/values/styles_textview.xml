<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" parent="@android:style/TextAppearance.Widget.TextView"/>

    <style name="TextView.RobotoThin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextView.RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextView.RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextView.RobotoBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/wire__text_size__regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Header">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.Subtitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/wire__text_size__small</item>
        <item name="android:textColor">@color/light_graphite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.Glyphs">
        <item name="android:fontFamily">@font/wire_glyphs</item>
    </style>

    <style name="TextView.Header.Settings">
        <item name="android:paddingStart">@dimen/wire__padding__16</item>
        <item name="android:paddingEnd">@dimen/wire__padding__16</item>
    </style>

    <style name="TextView.Title.Settings">
        <item name="android:paddingStart">@dimen/preference_button_padding</item>
        <item name="android:paddingEnd">@dimen/preference_button_padding</item>
    </style>

    <style name="TextView.Subtitle.Settings">
        <item name="android:paddingStart">@dimen/preference_button_padding</item>
        <item name="android:paddingEnd">@dimen/preference_button_padding</item>
    </style>

    <style name="TextView.Glyphs.Settings">
        <item name="android:textSize">@dimen/wire__padding__16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/preference_button_padding</item>
    </style>

</resources>
